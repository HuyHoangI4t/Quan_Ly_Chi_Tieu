<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect root access to the public folder
    RewriteRule ^$ public/ [L]

    # For any other request, if it's not a real file or directory,
    # forward it to the public/index.php front controller.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]
</IfModule>
